<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="uda" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">33sp</item>
    </style>

    <style name="cell" parent="android:TextAppearance">
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="url" parent="android:TextAppearance">
        <item name="android:autoLink">web</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="address" parent="android:TextAppearance">
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
